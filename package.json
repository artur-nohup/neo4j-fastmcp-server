{
  "name": "neo4j-fastmcp-server",
  "version": "1.0.0",
  "description": "Remote Neo4j MCP Server using FastMCP with API key authentication",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:descope": "tsx src/index-descope.ts",
    "start": "node dist/index.js",
    "start:descope": "node dist/index-descope.js",
    "test": "jest",
    "test:inspector": "npx tsx src/test-with-inspector.ts",
    "test:descope": "npx tsx src/test-descope.ts",
    "test:connection": "npx tsx src/test-connection.ts",
    "test:client": "npx tsx src/test-client.ts",
    "test:full": "npm run test:connection && npm run build && npm run test:client",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t neo4j-mcp-server .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f neo4j-mcp-server",
    "docker:test": "npm run docker:build && npm run docker:run && sleep 10 && npm run test:client && npm run docker:stop"
  },
  "dependencies": {
    "fastmcp": "latest",
    "neo4j-driver": "^5.25.0",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5",
    "@descope/node-sdk": "^1.19.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/cookie-parser": "^1.4.7",
    "@types/express-session": "^1.17.10",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  },
  "keywords": [
    "mcp",
    "neo4j",
    "api-key",
    "fastmcp",
    "typescript",
    "docker",
    "knowledge-graph"
  ],
  "author": "Claude Code",
  "license": "MIT"
}